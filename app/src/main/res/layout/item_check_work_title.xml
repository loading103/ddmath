<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_diagnose_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="@string/diagios_history"
        android:textColor="@color/color_333333"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        />

    <!-- 帮助 -->
    <ImageView
        android:id="@+id/iv_how_use"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/tv_diagnose_detail"
        android:layout_marginStart="9dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_howtouse"
        android:layout_centerVertical="true"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日限用2次"
        android:textSize="@dimen/text_large_x"
        android:textColor="@color/color_999999"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:drawableStart="@drawable/icon_tishi"
        android:drawablePadding="6dp"/>
</RelativeLayout>