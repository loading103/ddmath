<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:background="@drawable/selector_item_product_exchangeitem"
    android:id="@+id/item_product_mainlayout"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        >

        <!-- 标题 -->
        <TextView
            android:id="@+id/item_product_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6A7382"
            android:textSize="@dimen/text_large_xx"
            android:textStyle="bold"
            android:text="5次"/>

        <!-- 标题 -->
        <TextView
            android:id="@+id/item_product_learndou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6A7382"
            android:textSize="@dimen/text_large"
            android:layout_marginTop="6dp"
            android:text="300学豆"/>

    </LinearLayout>

</RelativeLayout>

