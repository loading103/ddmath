<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_zhuye"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <!--<include layout="@layout/toolbar_layout_mobile"/>-->
    <com.tsinghuabigdata.edu.ddmath.module.ddwork.view.WorkToolbar
        android:id="@+id/work_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_old_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="@drawable/inputbox_login"
                    android:drawableLeft="@drawable/icon_psd_original"
                    android:drawablePadding="10dp"
                    android:hint="输入您的原密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:textColorHint="@color/input_hint_text_color"
                    android:textSize="@dimen/text_large"/>

                <EditText
                    android:id="@+id/et_new_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="@drawable/inputbox_login"
                    android:drawableLeft="@drawable/login_icon_password"
                    android:drawablePadding="10dp"
                    android:hint="输入您的新密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColorHint="@color/input_hint_text_color"
                    android:textSize="@dimen/text_large"/>

                <EditText
                    android:id="@+id/et_confirm_passwd"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:background="@drawable/inputbox_login"
                    android:drawableLeft="@drawable/login_icon_re_password"
                    android:drawablePadding="10dp"
                    android:hint="再次输入您的新密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColorHint="@color/input_hint_text_color"
                    android:textSize="@dimen/text_large"/>

                <Button
                    android:id="@+id/bt_done"
                    android:layout_width="480dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_state_bg"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_large_x20"/>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</LinearLayout>