<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0CEAF">

    <com.tsinghuabigdata.edu.ddmath.module.learnmaterial.view.ScrollBottomScrollView
        android:id="@+id/view_lm_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/view_lm_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:contentDescription="@null"
                />

            <TextView
                android:id="@+id/view_lm_camerabtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/startcamera"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/text_large"
                android:background="@drawable/bg_rect_blue_r24"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="-60dp"
                android:layout_gravity="end"
                android:visibility="gone"/>

        </LinearLayout>


    </com.tsinghuabigdata.edu.ddmath.module.learnmaterial.view.ScrollBottomScrollView>


</FrameLayout>