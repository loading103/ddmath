<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="39dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true">
            <com.tsinghuabigdata.edu.ddmath.module.scoreplan.view.ImaginaryLineView
                android:id="@+id/line_dote_up"
                android:layout_centerHorizontal="true"
                android:layout_width="2dp"
                android:layout_height="30dp"/>
            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/icon_gerentifen" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-11-17至11-23周个人专属提分方案"
                android:textSize="24sp"
                android:textColor="@color/color_2C9FAE"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"/>
            <LinearLayout
                android:id="@+id/ll_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="22dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="("
                    android:textColor="@color/color_2C9FAE"
                    android:gravity="bottom"/>
                <TextView
                    android:id="@+id/tv_title_blew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_2C9FAE"
                    android:gravity="bottom"/>
                <TextView
                    android:id="@+id/tv_title_blew_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/red"
                    android:gravity="bottom"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text=")"
                    android:textColor="@color/color_2C9FAE"
                    android:gravity="bottom"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_download"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:text="一键下载"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:background="@drawable/btn_graid_17b7"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/iv_new"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_youxinzeng" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rv_1"
            android:visibility="visible"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
            <com.tsinghuabigdata.edu.ddmath.module.scoreplan.view.ImaginaryLineView
                android:id="@+id/line_dote_down"
                android:layout_centerHorizontal="true"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/iv_headview"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:visibility="invisible"
                android:src="@drawable/icon_gerentifen"
                android:layout_marginTop="20dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/item_custom_textbook"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>