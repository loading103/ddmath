<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 诊断作业 -->
    <RelativeLayout
        android:id="@+id/layout_zdzy_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- 有作业 提示文本 -->
        <TextView
            android:id="@+id/tv_diagnose"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/duihuakuangzhenduan"
            android:maxLines="2"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="12dp"
            android:text=""
            android:textColor="@color/color_47A1AC"
            android:textSize="12sp"
            android:layout_marginBottom="-16dp"
            android:layout_marginStart="30dp"
            android:visibility="gone"
            android:ellipsize="end"
            android:gravity="center_vertical"/>

        <!-- 作业状态 -->
        <ImageView
            android:id="@+id/iv_diagnose_workstatus"
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:src="@drawable/zhenduanzuoye_weibuzhi"
            android:visibility="visible"
            android:contentDescription="@null"
            android:layout_below="@id/tv_diagnose"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"/>

    </RelativeLayout>

    <!-- 收集错题 -->
    <RelativeLayout
        android:id="@+id/layout_college_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center">

        <!-- 有作业提示 -->
        <TextView
            android:id="@+id/tv_college_errtip"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/duihuakuangshouji"
            android:maxLines="2"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="12dp"
            android:text=""
            android:textColor="@color/color_47A1AC"
            android:textSize="12sp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:layout_marginBottom="-30dp"
            android:layout_marginStart="12dp"
            />

        <ImageView
            android:id="@+id/iv_college_err"
            android:layout_width="96dp"
            android:layout_height="66dp"
            android:src="@drawable/shoujicuoti_weibuzhi"
            android:visibility="visible"
            android:contentDescription="@null"
            android:layout_below="@id/tv_college_errtip"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"/>

    </RelativeLayout>

</RelativeLayout>



