<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="600dp"
              android:layout_height="408dp"
              android:background="@drawable/bg_produce_book"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="552dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_close_pdf"/>


    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="13dp"
        android:text="正在准备生成错题本…"
        android:textColor="#018ABB"
        android:textSize="30sp"/>

    <com.tsinghuabigdata.edu.ddmath.view.MyProgessLine
        android:id="@+id/myProgessLine"
        android:layout_width="493dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="88dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="140dp"
        android:drawableLeft="@drawable/ic_horn"
        android:text="本功能目前处于免费试用期"
        android:textColor="#48B8FF"
        android:textSize="14sp"/>


</LinearLayout>