<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_marginLeft="17dp"
    android:orientation="horizontal"
    android:layout_marginRight="60dp"
    android:id="@+id/ll_textbook"
    android:layout_marginTop="15dp"
    android:background="@drawable/btn_graid_blue">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="29"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="52dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_define_textbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第一部分"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:background="@drawable/icon_dingzhixuebiaoqian"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="7dp"
                    />
                <TextView
                    android:id="@+id/tv_choose_textbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选做"
                    android:textColor="@color/color_0B9AA8"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:paddingRight="4dp"
                    android:paddingLeft="4dp"
                    android:background="@drawable/bg_rect_white_r6"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_title_textbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-11-21 周三错题订正"
                android:textColor="@color/color_0B9AA8"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="13dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_correct_no_textbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待订正 0 题"
            android:textColor="@color/color_0B9AA8"
            android:textSize="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="13dp"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="12"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_correction_textbook"
            android:layout_width="108dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_rect_white_r24"
            android:textColor="@color/color_0B9AA8"
            android:textSize="@dimen/text_middle"
            android:layout_marginRight="13dp"
            android:layout_centerInParent="true"
            android:text="拍照上传" />
        <TextView
            android:id="@+id/tv_correction_state_textbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_0B9AA8"
            android:textSize="12dp"
            android:layout_below="@+id/bt_correction_textbook"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="13dp"/>
        <ImageView
            android:id="@+id/iv_state_textbook"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_yixiazai"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>