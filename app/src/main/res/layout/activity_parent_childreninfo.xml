<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_FCFCFC"
    android:orientation="vertical">

    <!-- 状态栏 -->
    <com.tsinghuabigdata.edu.ddmath.parent.view.ParentToolbar
        android:id="@+id/worktoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F1FBF7"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_F1FBF7">

                <!-- 提示信息 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_small"
                    android:text="@string/children_info_tips"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="20dp"/>

                <!-- 第一块区域-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@color/white">

                    <!-- 用户头像-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_333333"
                            android:text="头像"
                            android:layout_centerVertical="true"
                            />

                        <com.tsinghuabigdata.edu.ddmath.view.CircleImageView
                            android:id="@+id/iv_children_headimage"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@null"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"
                            />

                    </RelativeLayout>

                    <!-- 分割线 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_EAEAEA"/>

                    <!-- 用户昵称-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_333333"
                            android:text="昵称"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:id="@+id/iv_children_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_888888"
                            android:text=""
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <!-- 分割线 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_EAEAEA"/>

                    <!-- 姓名 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_333333"
                            android:text="姓名"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:id="@+id/iv_children_realname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_888888"
                            android:text=""
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <!-- 分割线 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_EAEAEA"/>


                    <!-- 用户头像-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_333333"
                            android:text="性别"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:id="@+id/iv_children_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_888888"
                            android:text=""
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <!-- 第二块区域-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="16dp">

                    <!-- 考号 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_333333"
                            android:text="考号"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:id="@+id/iv_children_examnumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_888888"
                            android:text=""
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            />
                    </RelativeLayout>

                    <!-- 分割线 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_EAEAEA"/>

                    <!-- 入学年份 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_333333"
                            android:text="入学年份"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:id="@+id/iv_children_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_888888"
                            android:text=""
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <!-- 分割线 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_EAEAEA"/>

                    <!-- 学校年级 -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_333333"
                            android:text="学校班级"
                            />

                        <TextView
                            android:id="@+id/iv_children_gradeinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/color_888888"
                            android:text=""
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:gravity="end"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <!-- 邮寄地址-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:background="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/color_333333"
                        android:text="邮寄地址"
                        />

                    <TextView
                        android:id="@+id/iv_children_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/color_888888"
                        android:text=""
                        android:layout_marginStart="40dp"
                        android:gravity="end"
                        />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
