<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="100dp"
    android:layout_height="158dp"
    android:orientation="horizontal"
    android:id="@+id/ll_define"
    android:layout_marginTop="20dp"
    android:background="@drawable/btn_graid_gray">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="74dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_define_define"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:text="自定义"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_dingzhixuebiaoqian"
                    android:layout_marginTop="10dp"
                   />
                <TextView
                    android:id="@+id/tv_choose_define"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选做"
                    android:textColor="@color/color_0B9AA8"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:background="@drawable/bg_rect_white_r6"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="12dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_title_define"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-11-21 周三错题订正"
                android:textColor="@color/color_0B9AA8"
                android:textSize="24dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="23dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_correct_no_define"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共20题"
            android:textColor="@color/color_0B9AA8"
            android:textSize="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="23dp"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_correction_define"
            android:layout_width="164dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_rect_white_r24"
            android:textColor="#FF0B9AA8"
            android:textSize="20sp"
            android:layout_marginRight="23dp"
            android:layout_centerInParent="true"
            android:text="" />
        <TextView
            android:id="@+id/tv_correction_state_define"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已订正20题"
            android:textColor="@color/color_0B9AA8"
            android:textSize="16dp"
            android:layout_below="@+id/bt_correction_define"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="23dp"/>
        <ImageView
            android:id="@+id/iv_state_define"
            android:layout_width="75dp"
            android:layout_height="64dp"
            android:src="@drawable/icon_yishangchuan"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>