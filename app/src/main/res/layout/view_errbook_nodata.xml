<?xml version="1.0" encoding="utf-8"?>
<!-- 没有数据 -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_nodata"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_large_x"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:layout_width="144dp"
        android:layout_height="100dp"
        android:src="@drawable/pic_nodata"
        android:contentDescription="@null"
        android:layout_above="@id/tv_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"/>

    <com.tsinghuabigdata.edu.ddmath.module.errorbook.view.OvalTextView
        android:id="@+id/tv_nodata_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_large_x"
        android:textColor="@color/color_787878"
        android:layout_below="@id/tv_empty"
        android:layout_marginTop="36dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:lineSpacingMultiplier="1.2"
        android:background="@drawable/bg_rect_nodata_tips"/>

</RelativeLayout>
