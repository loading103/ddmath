<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="70dp"
    android:paddingRight="70dp"
    android:orientation="vertical"
    android:background="#FFF9D7"
    >

    <!-- 提示 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请先在下方查看您需要的教辅是否被豆豆平台支持，再进行兑换操作。"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_large"
        android:layout_marginTop="12dp"
        />

    <!-- 商品名称 及学豆 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:background="@drawable/bg_rect_blue"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/item_holiday_productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large_xx"
            android:text="寒假作业"
            />

        <TextView
            android:id="@+id/item_holiday_learndou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_middle"
            android:layout_marginTop="16dp"
            android:text="1500学豆"
            />


    </LinearLayout>

    <!-- 支持的教辅列表 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large"
            android:text="已支持教辅或套题："
            android:background="@drawable/bg_material_list"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/transparent"
            android:background="@color/white"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</LinearLayout>
