<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <!-- 装饰背景 -->
        <ImageView
            android:layout_width="70dp"
            android:layout_height="26dp"
            android:src="@drawable/zhuangshixingxing"
            android:contentDescription="@null"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <!-- 表盘 -->
            <com.tsinghuabigdata.edu.ddmath.module.onekeydiagnose.view.KnowDiagnoseDialView
                android:id="@+id/dv_dialview"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <!-- 正确率 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_ratevalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_A5A5A5"
                    android:textSize="@dimen/text_small"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_A5A5A5"
                    android:textSize="@dimen/text_small_x"
                    />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <!-- 按钮背景 -->
    <ImageView
        android:layout_width="82dp"
        android:layout_height="36dp"
        android:src="@drawable/zhsihizhenduan"
        android:contentDescription="@null"
        android:layout_marginTop="-18dp"/>

</LinearLayout>
