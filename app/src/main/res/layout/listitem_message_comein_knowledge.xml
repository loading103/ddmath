<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ltv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.5"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/robot_common_text_color" />
    <TextView
        android:id="@+id/tv_knowledge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这些知识点正确率低于平均水平"
        android:drawableLeft="@drawable/ic_ghost"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="11sp"
        android:textColor="@color/red"/>

    <LinearLayout
        android:id="@+id/ll_knowledge_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:text="展开全部"
        android:textColor="@color/msg_tag_recommand" />

</LinearLayout>