<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="125dp"
                android:layout_height="158dp"
                android:background="@drawable/bg_treasure_item"
                android:orientation="vertical"
                android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 宝贝图片 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@drawable/bg_treasure_item_iv">

            <ImageView
                android:id="@+id/iv_treasure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/iv_ineffective"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/ico_failed"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/iv_available"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/ico_available"/>

            <!-- <LinearLayout
                 android:id="@+id/ll_exclusive"
                 android:layout_width="85dp"
                 android:layout_height="24dp"
                 android:layout_alignParentBottom="true"
                 android:layout_centerHorizontal="true"
                 android:background="@drawable/ico_zhuanshu"
                 android:orientation="horizontal">


             </LinearLayout>-->

            <TextView
                android:id="@+id/tv_exclusive"
                android:layout_width="90dp"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ico_zhuanshu"
                android:gravity="center_horizontal"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:text="XXX专属"
                android:textColor="@color/white"
                android:textSize="10sp"
                />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_treasure_item_tv"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <!-- 标题 -->
            <TextView
                android:id="@+id/tv_treasure_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="商品标题"
                android:textColor="@color/zx_333333"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_treasure_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="商品副标题"
                android:textColor="@color/zx_333333"
                android:textSize="8sp"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_ineffective"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_centerInParent="true"
        android:background="@color/zx50_black"
        android:gravity="center"
        android:singleLine="true"
        android:text="该宝贝已失效"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="invisible"
        />


</RelativeLayout>