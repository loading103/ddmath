<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="0dp"
    android:gravity="center_vertical">

    <!-- 商品图片 -->
    <ImageView
        android:id="@+id/item_product_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:contentDescription="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_treasure_item_tv"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- 商品名称 -->
        <TextView
            android:id="@+id/item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="商品标题"
            android:textColor="@color/color_E68229"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            />

        <!-- 使用期限 -->
        <TextView
            android:id="@+id/item_product_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="使用期限:2018.03.17-2018.06.30"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_middle"
            />

        <!-- 使用次数 -->
        <TextView
            android:id="@+id/item_product_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="使用次数：不限次"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_middle"
            />


    </LinearLayout>

</LinearLayout>