<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_unregister_tips"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">



    <LinearLayout
        android:id="@+id/ll_unregister_pic"
        android:layout_width="240dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_tips"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="88"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你还没有登录哦!"
            android:textColor="#655531"
            android:textSize="18sp"
            />


        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="42"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="480dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_state_bg"
        android:gravity="center"
        android:text="@string/register_ddmath"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large_x"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="480dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_state_bg"
        android:gravity="center"
        android:text="@string/login_ddmath"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large_x"/>



</LinearLayout>