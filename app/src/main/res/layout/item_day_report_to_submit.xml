<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@drawable/bg_day_report_to_submit"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="作业名称01"
            android:ellipsize="end"
            android:textColor="@color/color_999999"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_question_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="共X题"
                android:textColor="@color/color_888888"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_correct_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_correct"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/color_EE3E3E"
                android:textSize="14sp"
                android:layout_marginStart="6dp"
                />

            <TextView
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_to_submit_tag"
                android:gravity="center"
                android:singleLine="true"
                android:text="待提交"
                android:textColor="@color/color_FF6F00"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="请提醒孩子在 2018-0X-XX XX:XX前提交"
            android:textColor="@color/color_888888"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/ll_overdue_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/tishi"
                android:contentDescription="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="您的孩子没按时提交作业哦～"
                android:textColor="#F18D01"
                android:textSize="14sp"
                android:visibility="visible"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>