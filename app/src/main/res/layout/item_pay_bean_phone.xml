<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rr_root"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:background="@drawable/selector_pay_bean">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/selector_bean_picture"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textColor="@color/pay_money_text_color"
                android:textSize="38sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/pay_money_text_color"
                android:textSize="16sp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_bean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="XXXX学豆"
            android:textColor="@color/pay_bean_text_color"
            android:textSize="18sp"
            />

    </LinearLayout>


</RelativeLayout>