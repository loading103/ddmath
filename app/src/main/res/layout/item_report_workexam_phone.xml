<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/smallbluebg">


    <LinearLayout
        android:id="@+id/item_work_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_work_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_middle"
                android:textColor="@color/color_109AFF"
                android:maxLines="2"
                android:drawableEnd="@drawable/artboard"
                />

            <ImageView
                android:id="@+id/item_work_typeimage"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/artboard"
                android:contentDescription="@null"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/item_work_rightcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="正确X题"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:id="@+id/item_work_wrongcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="错误X题"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_small"
                android:layout_marginStart="6dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_redpoint"
        style="@style/report_item_redpoint"
        android:contentDescription="@null"
        />

</RelativeLayout>