<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ddwork_selectlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_pageitem_bg"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/item_ddwork_pagenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第 1 页"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/color_48B8FF"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/item_ddwork_pagestatuslayout"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_ddwork_pagenum"
            android:gravity="center"
            android:background="@drawable/bg_pagestatus_uncamera"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:padding="4dp">

            <TextView
                android:id="@+id/item_ddwork_pagestatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未拍照"
                android:textSize="14sp"
                android:textColor="@color/color_948ECD"
                android:drawablePadding="2dp"
                />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>