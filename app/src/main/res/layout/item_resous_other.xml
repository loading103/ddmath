<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="415dp"
    android:layout_height="96dp"
    android:layout_marginLeft="17dp"
    android:orientation="horizontal"
    android:id="@+id/ll_other"
    android:layout_marginTop="20dp"
    android:background="@drawable/btn_graid_blue">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="52dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_define_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自定义"
                    android:textColor="#FF0B9AA8"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:background="@drawable/ic_label"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="13dp"/>
                <TextView
                    android:id="@+id/tv_choose_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选做"
                    android:textColor="#FF0B9AA8"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:paddingRight="4dp"
                    android:paddingLeft="4dp"
                    android:background="@drawable/shape_white"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="6dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_title_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-11-21 周三错题订正"
                android:textColor="#FF0B9AA8"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="13dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_correct_no_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待订正 0 题"
            android:textColor="#FF0B9AA8"
            android:textSize="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="13dp"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_correction_other"
            android:layout_width="108dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_rect_white_r24"
            android:textColor="#FF0B9AA8"
            android:textSize="@dimen/text_middle"
            android:layout_marginRight="13dp"
            android:layout_centerInParent="true"
            android:text="继续订正" />
        <TextView
            android:id="@+id/tv_correction_state_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已订正20题"
            android:textColor="#FF0B9AA8"
            android:textSize="12dp"
            android:layout_below="@+id/bt_correction_other"
            android:layout_marginTop="3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="13dp"/>
        <ImageView
            android:id="@+id/iv_state_other"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:src="@drawable/yidingzheng"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>