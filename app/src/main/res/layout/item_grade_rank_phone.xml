<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_class_item"
              android:layout_width="match_parent"
              android:layout_height="32dp"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_rank_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_01"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/tv_rank_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_D48312"
            android:textSize="16sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <!--<com.tsinghuabigdata.edu.ddmath.view.CircleImageView-->
            <!--android:id="@+id/iv_head_class"-->
            <!--android:layout_width="26dp"-->
            <!--android:layout_height="26dp"-->
            <!--app:border_color="@color/white"-->
            <!--app:border_width="0dp"/>-->
        <com.tsinghuabigdata.edu.ddmath.view.BaseHeadView
            android:id="@+id/iv_head_class"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:showPendant="true"/>

        <ImageView
            android:id="@+id/iv_user_pendent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="-2dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="@null"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_name_class"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_class_name_grade"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_glory_class"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="12sp"/>

</LinearLayout>