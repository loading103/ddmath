<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingEnd="15dp"
        android:paddingStart="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学豆充值"
            android:textColor="@color/color_666666"
            android:textSize="24sp"
            />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tuichu_chongzhiyemian"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值金额"
            android:textColor="@color/color_666666"
            android:textSize="27sp"
            />

        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="XXX元"
            android:textColor="@color/color_4DB8FF"
            android:textSize="27sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入账学豆"
            android:textColor="@color/color_999999"
            android:textSize="21sp"
            />

        <TextView
            android:id="@+id/tv_get_bean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="XXXX个"
            android:textColor="@color/color_999999"
            android:textSize="21sp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="15dp"
        android:text="请选择支付方式"
        android:textColor="@color/color_999999"
        android:textSize="21sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_wxpay"
            android:layout_width="276dp"
            android:layout_height="match_parent"
            android:src="@drawable/selector_wechatpay"/>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="276dp"
            android:layout_height="match_parent"
            android:src="@drawable/selector_alipay"/>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_parentpay"
            android:layout_width="276dp"
            android:layout_height="match_parent"
            android:src="@drawable/selector_parentpay"/>


    </LinearLayout>

    <!-- 用户协议 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="点击确认支付，即表示您已同意"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_large_x"/>

        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_procotol"
            android:textColor="@color/color_52BDC9"
            android:textSize="@dimen/text_large_x"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_confirm_pay"
        android:layout_width="500dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_loading_retry"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="24sp"/>

</LinearLayout>