<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_item_list"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_marginRight="22dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@drawable/item_week_bg"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_flag"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/icon_red"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/tv_week_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:text="第一页"
                        android:textColor="@color/color_333333"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/tv_data_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="11-21"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/color_666666"
                        android:layout_centerInParent="true"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layerType="software"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_dotted_line"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="3dp"
        android:layout_toRightOf="@+id/ll_item_list"
        android:layout_height="match_parent"
        android:background="@color/white">
        <View
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#11999999"/>
        <View
            android:id="@+id/iv_line"
            android:layout_width="3dp"
            android:layout_height="100dp"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:background="@color/common_green"/>
    </RelativeLayout>
</LinearLayout>
