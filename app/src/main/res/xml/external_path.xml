<?xml version="1.0" encoding="utf-8"?>
<paths>

    <!--

    //物理路径相当于Context.getFilesDir() + /path/。
    <files-path name="name" path="path" />
    //物理路径相当于Context.getCacheDir() + /path/。
    <cache-path name="name" path="path" />
    //物理路径相当于Environment.getExternalStorageDirectory() + /path/。
    <external-path name="name" path="path" />

    //物理路径相当于**Context.getExternalFilesDir(String) **+ /path/。
    <external-files-path name="name" path="path" />
    //物理路径相当于Context.getExternalCacheDir() + /path/。
    <external-cache-path name="name" path="path" />

    -->

    <root-path name="name" path="" />

    <!-- 代表外部存储区域的根目录下的文件 Environment.getExternalStorageDirectory()/DCIM/camerademo目录 -->
    <external-path name="DCIM" path="DCIM" />
    <!--代表外部存储区域的根目录下的文件 Environment.getExternalStorageDirectory()/Pictures/camerademo目录 -->
    <external-path name="Pictures" path="Pictures" />

    <!-- 代表app 私有的存储区域 Context.getFilesDir()目录下的images目录 /data/user/0/com.hm.camerademo/files/images&ndash -->
    <files-path name="private_files" path="images" />
    <!-- 代表app 私有的存储区域 Context.getCacheDir()目录下的images目录 /data/user/0/com.hm.camerademo/cache/images&ndash; -->
    <cache-path name="private_cache" path="images" />

    <!--代表app 外部存储区域根目录下的文件 Context.getExternalFilesDir(Environment.DIRECTORY_PICTURES)目录下的Pictures目录-->
    <external-files-path name="external_files" path="image/" />
    <external-cache-path name="hm_private_files" path="apk"/>

</paths>